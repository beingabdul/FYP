@model HostalManagement.Models.Bill

@{
    ViewBag.Title = "ReceiveStdBills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Generate Bill</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Messing</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.RegistrationId, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <p>Student</p>
            <div class="col-md-10">
                @*@Html.DropDownList("RegistrationId", null, new { @class = "form-control" })*@
                @Html.DropDownList("RegistrationId", null, "--Select Student-- ", new { @class = "form-control" })
            </div>
        </div>

        <div class="align-self-md-end" , style="margin-left: 940px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Receive" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
@if (TempData["msg"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                var msg="@TempData["msg"]";
                if (msg =="Bill Received!") {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: msg,
                        showConfirmButton: false,
                        timer: 2500
                    }).then(() => {
                        window.location.reload();
                    })
                }
                else {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'error',
                        title: 'Error',
                        text: msg,
                        showConfirmButton: false,
                        timer: 2500
                    }).then(() => {
                        window.location.reload();
                    })
                }
            };
    </script>
}
