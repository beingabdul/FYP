<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/img/dms.png">
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Content/admin/assets/modules/bootstrap/css/bootstrap.min.css">

    <!-- CSS Libraries -->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/admin/assets/modules/jqvmap/dist/jqvmap.min.css">
    <link rel="stylesheet" href="~/Content/admin/assets/modules/summernote/summernote-bs4.css">
    <link rel="stylesheet" href="~/Content/admin/assets/modules/owlcarousel2/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/admin/assets/modules/owlcarousel2/dist/assets/owl.theme.default.min.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Content/admin/assets/css/style.min.css">
    <link rel="stylesheet" href="~/Content/admin/assets/css/components.min.css">
    <link href="~/Assets/sweetalert2.min.css" rel="stylesheet" />


</head>
<body class="layout-4">




    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>

            <!-- Start app top navbar -->
            <nav class="navbar navbar-expand-lg main-navbar">
                <form class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fas fa-bars"></i></a></li>

                    </ul>

                    @*----------Login Button Text-------------*@
                </form>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            @try
                            {
                                if (Html.ActiveUserInfo() != null)
                                {
                                    <div class="d-sm-none d-lg-inline-block">Hi, @Html.ActiveUserInfo().Name</div>
                                }
                            }
                            catch
                            {
                                <div class="d-sm-none d-lg-inline-block">User Name</div>
                            }


                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="/Global/Logout" class="dropdown-item has-icon text-danger"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </li>
                </ul>
            </nav>
            <!-- Start main left sidebar menu -->
            <div class="main-sidebar sidebar-style-3" style="background-color:forestgreen">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a href="" onclick="home()">MESS MANAGEMENT SYSTEM</a>
                    </div>
                    <ul class="sidebar-menu">

                        @if (Html.ActiveUserInfo() != null)
                        {

                            if (Html.ActiveUserInfo().UserRoleId == 1)
                            {
                                <li class="dropdown active">
                                    <a href="/Admin/Index" class="nav-link "><i class="fa fa-fire"></i><span>Dashboard</span></a>
                                </li>
                                <li>
                                    <a href="/Menu/Index" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Mess Menu</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/GenerateBill" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Generate Bill</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/GenerateBillReport" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Print Bill</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/ReceiveStdBills" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Receive Bill</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/Admin/StudentList" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Students</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/ClerkList" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Clerks</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/StoremanList" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Storemans</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/ParentsList" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Parents</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/AttendanceRegisteration" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Register Check in/out</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/CheckInOut" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Daily Check-In/Out</span>
                                    </a>
                                </li>

                            }
                            else if (Html.ActiveUserInfo().UserRoleId == 2)
                            {
                                <li class="dropdown active">
                                    <a href="/Student/Index" class="nav-link "><i class="fa fa-fire"></i><span>Dashboard</span></a>
                                </li>
                                <li>
                                    <a href="/Student/Ordernow" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Orders & Check-in</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Student/Foodlist" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Mess Menu</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Student/CurrentStatus" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Daily Messing</span>
                                    </a>
                                </li>

                            }
                            else if (Html.ActiveUserInfo().UserRoleId == 3)
                            {
                                <li class="dropdown active">
                                    <a href="/Clerk/Index" class="nav-link "><i class="fa fa-fire"></i><span>Dashboard</span></a>
                                </li>

                                <li>
                                    <a href="/Clerk/StudentList" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Students</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Clerk/MenuList" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Mess Menu</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Clerk/GenerateBill" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Generate Bill</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Clerk/GenerateBillReport" class="nav-link ">
                                        <i class="fa fa-plug"></i> <span>Print Bill</span>
                                    </a>
                                </li>
                            }
                            else if (Html.ActiveUserInfo().UserRoleId == 4)
                            {
                                <li class="dropdown active">
                                    <a href="/Storeman/Index" class="nav-link "><i class="fa fa-fire"></i><span>Dashboard</span></a>
                                </li>
                                <li>
                                    <a href="/Storeman/CheckOrder" class="nav-link "><i class="fas fa-plug"></i> <span>Orders</span></a>
                                </li>
                            }

                        }
                    </ul>
                </aside>
            </div>
            <!-- Start app main Content -->
            <div class="main-content">
                <section class="section">

                    @RenderBody()

                </section>
            </div>
            <!-- Start app Footer part -->
            <footer class="main-footer">
                <div class="footer-left">
                </div>
                <div class="footer-right">

                </div>
            </footer>
        </div>
    </div>





    <!-- General JS Scripts -->
    <script src="~/Content/admin/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/Content/admin/js/CodiePie.js"></script>
    <!-- JS Libraies -->
    <script src="~/Content/admin/assets/modules/jquery.sparkline.min.js"></script>
    <script src="~/Content/admin/assets/modules/chart.min.js"></script>
    <script src="~/Content/admin/assets/modules/owlcarousel2/dist/owl.carousel.min.js"></script>
    <script src="~/Content/admin/assets/modules/summernote/summernote-bs4.js"></script>
    <script src="~/Content/admin/assets/modules/chocolat/dist/js/jquery.chocolat.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/Content/admin/js/page/index.js"></script>
    <!-- Template JS File -->
    <script src="~/Content/admin/js/scripts.js"></script>
    <script src="~/Content/admin/js/custom.js"></script>
    <script type="text/javascript" src="https://unpkg.com/webcam-easy/dist/webcam-easy.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Assets/sweetalert2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script>
        function home() {
            window.location.reload();
        }
        $(() => {
            var user = '@Html.ActiveUserInfo()';
            if (user == '') {
                window.location.href = "/Account/Login";
            }

        })
    </script>
</body>

</html>
